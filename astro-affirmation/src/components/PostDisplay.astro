---
import background from "../assets/background.svg";

interface Props {
  post: any;
  postsCount: number;
}

const { post, postsCount } = Astro.props;
const current = Number(post.slug);
const next = isNaN(current) ? 1 : current + 1 > postsCount ? 1 : current + 1;

---

<div class="page-container">
  <div class="content" id="content">
    <img id="background" src={background.src} alt="" fetchpriority="high" />
    <h1 id="title">Loading...</h1>
    <div id="post-content" class="loading">Loading...</div>
    <div style="display: flex; justify-content: center; margin-top: 2rem;">
      <a href={`/${next}`}><button class="button-blue">Következő</button></a>
    </div>
  </div>
</div>

<style>
  body,
  html {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
    font-family: "Segoe UI", Roboto, sans-serif;
  }

  .page-container {
    position: relative;
    min-height: 100vh;
    overflow: hidden;
    background: linear-gradient(160deg, #a8dadc, #457b9d, #1d3557);
    opacity: 0.6;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
  }

  .content {
    position: relative;
    z-index: 1;
    color: #f1faee;
    max-width: 800px;
    line-height: 1.4;
    font-size: 2rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    opacity: 0.9;
  }

  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }

  .button-blue {
  display: inline-block;
  background-color: #8BA1BA; /* Tailwind's blue-500 */
  color: white;
  padding: 0.75rem 1.5rem;
  font-size: 1rem;
  font-weight: 500;
  border: none;
  border-radius: 9999px; /* fully rounded pill */
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.1s ease;
  text-align: center;
  text-decoration: none;
}

.button-blue:hover {
  background-color: #2563EB; /* Tailwind's blue-600 */
}

.button-blue:active {
  transform: scale(0.98);
}

.button-blue:focus {
  outline: none;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.4); /* subtle blue focus ring */
}

  @media (max-width: 600px) {
    .content {
      font-size: 1.5rem;
    }
  }

</style>

{(
  <script define:vars={{ post }}>
    function showPost() {
      document.getElementById('title').textContent = post.data.title;
      document.getElementById('post-content').innerHTML = post.rendered.html;
    }
    
    showPost();
  </script>
)} 